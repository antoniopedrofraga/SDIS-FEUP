package peers;

import exceptions.ArgsException;
import subprotocols.ChunkBackup;
import subprotocols.SubProtocol;
import utilities.Constants;

public interface InitiatorPeer {
	public static void main(String[] args) throws ArgsException {
		if (!correctArgs(args))
			throw new ArgsException("A subprotocol was called in a wrong way.");
		
	}

	public static boolean correctArgs(String[] args) {
		
		String action = args[0];
		SubProtocol protocol;
		
		switch(action) {
		case Constants.BACKUP:
			if (args.length != 5)
				return false;
			
			protocol = new ChunkBackup(action, args[1], args[2], args[3], args[4]);
			break;
		default:
			return false;
		}
		
		return true;
	}
}
