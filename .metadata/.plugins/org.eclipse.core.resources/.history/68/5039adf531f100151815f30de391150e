package channels;

import java.net.InetAddress;
import java.net.MulticastSocket;


public class Channel {
	private Thread thread;
	private MulticastSocket socket;
	private InetAddress address;
	private int port;
	
	Channel(String mdbAddress, String mdbPort, Thread thread) {
		this.address = InetAddress.getByName(mdbAddress);
		this.port = Integer.parseInt(mdbPort);
		this.socket = new MulticastSocket(this.port);
		this.thread = thread;
	}
	
	public void listen() {
		this.thread.start();
	}
}
