package subprotocols;

import java.util.ArrayList;

import peers.Peer;

public class Restore extends Thread {
	String fileName;
	public Restore(String fileName) {
		this.fileName = fileName;
	}
	
	public void restore() {
		if (!Peer.getStorage().getStoredFileIds().containsKey(fileName)) {
			System.out.println("This file '" + fileName + "' was not backed up yet");
			return;
		}
		String fileId = Peer.getStorage().getStoredFileIds().get(fileName);
		ArrayList<Long> savedChunks = Peer.getStorage().getStoredChunks().get(fileId);
		for (int i = 0; i < savedChunks.size(); i++) {
			
		}
	}
	
	public void run() {
		restore();
	}
}
