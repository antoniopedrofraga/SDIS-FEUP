package database;

import java.util.ArrayList;
import java.util.HashMap;

import messages.Header;


public class Database {
	HashMap<Header, ArrayList<Header>> storeConfirmations;
	
	public Database() {
		storeConfirmations = new HashMap<Header, ArrayList<Header>>();
	}

	public HashMap<Header, Header> getStoreConfirmations() {
		return storeConfirmations;
	}

	public int countConfirmedChunks(Header header) {
		int count = 0;
		Long chunkNo = Long.parseLong(header.getChunkNo());
		String fileId = header.getFileId();
		storeConfirmations.get(<fileId, chunkNo>);
		return count;
	};
}
